<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="custom_search_view">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="app_text">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="section_header_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/section_header_text_size</item>
    </style>
    <style name="body_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>
    <style name="task_card_category_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:alpha">@dimen/text_alpha</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="task_card_title_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/task_card_title_text_size</item>
    </style>
    <style name="circular_icon">
        <item name="cornerSize">50%</item>
    </style>
</resources>
