<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- General Style -->
    <style name="app_text">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="section_header_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/section_header_text_size</item>
    </style>
    <style name="body_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>
    <style name="excerpt_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/excerpt_text_size</item>
    </style>

    <!-- Task Card Style -->
    <style name="task_card_category_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:alpha">@dimen/text_alpha</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="task_card_title_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/task_card_title_text_size</item>
    </style>

    <!-- Menu Bar Style -->
    <style name="circular_icon">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Form Style -->
    <style name="custom_input" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/slate</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginBottom">@dimen/input_margin_bottom</item>
    </style>

    <style name="custom_text_input" parent="custom_input">
        <item name="android:layout_height">@dimen/input_height</item>
    </style>

    <style name="custom_textarea" parent="custom_input">
        <item name="android:layout_height">@dimen/textarea_height</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">@dimen/input_padding_y</item>
        <item name="android:paddingBottom">@dimen/input_padding_y</item>
    </style>

    <style name="label_text" parent="app_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="custom_button" parent="ThemeOverlay.Material3.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="selected_date_text" parent="app_text">
        <item name="android:textSize">@dimen/selected_date_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="spinner_dropdown_item_text" parent="app_text">
        <item name="android:textColor">@color/dark_slate</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <!-- Custom CalendarView Style -->
    <style name="CustomCalendarView" parent="Widget.Material3.MaterialCalendar">
        <item name="android:dateTextAppearance">@style/CustomDateTextAppearance</item>
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayTextAppearance</item>
    </style>

    <!-- Custom Text Appearance for Date -->
    <style name="CustomDateTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom Text Appearance for Week Day -->
    <style name="CustomWeekDayTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/light_gray</item>
    </style>
</resources>
